extends layout.pug

block title
  title Library Manager - Books

block content
  h1 Books
  p
    a(href="/books/new", class="button") Create New Book
  table
    thead
      th Title
      th Author
      th Genre
      th Year
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`) #{book.title}
          td= book.author
          td= book.genre 
          td= book.year

block footer
  include pagination